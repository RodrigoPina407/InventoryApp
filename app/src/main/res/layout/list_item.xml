<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/sell_button"
        android:layout_width="@dimen/buy_size"
        android:layout_height="@dimen/buy_size"
        android:src="@drawable/basket_fill"
        android:padding="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/left_sub_text"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_top_margin"
            android:textSize="@dimen/item_name_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_quantity"
            style="@style/sub_text"
            android:layout_below="@id/item_name" />

        <TextView
            android:id="@+id/item_supplier"
            style="@style/sub_text"
            android:layout_below="@id/item_name"
            android:layout_marginStart="@dimen/left_sub_text"
            android:layout_toEndOf="@id/item_quantity" />

        <TextView
            android:id="@+id/item_price"
            style="@style/sub_text"
            android:layout_below="@id/item_name"
            android:layout_marginStart="@dimen/left_sub_text"
            android:layout_toEndOf="@id/item_supplier" />

    </RelativeLayout>

</LinearLayout>